
<div class="layui-container">
    <div class="layui-row">
        <div class="layui-col-md6" style="width: 300px">
            <ul id="tree"></ul>
        </div>

        <div class="layui-col-md3">
            <div class="layui-card">
                <div class="layui-card-header">layui树形菜单示例</div>
            </div>
            <div class="layui-card">
                <div class="layui-card-header">菜单元素</div>
                <div class="layui-card-body">
                        &lt;ul id="tree"&gt;&lt;ul&gt;
                </div>
            </div>
            <div class="layui-card">
                <div class="layui-card-header">tree使用方法</div>
                <div class="layui-card-body">
                    tree({ </br>
                    elem:'#tree', //元素id </br>
                    nodes:treeNode, //节点数据 </br>
                    click:function (node) { </br>
                        //节点点击回调方法 </br>
                        } </br>
                        }); </br>
                    }) </br>
                </div>
            </div>

        </div>

        <div class="layui-col-md3">
            <div class="layui-card">
                <div class="layui-card-header">节点数据结构</div>
                <div class="layui-card-body">
                    节点为JSON数组 </br>
                    数组元素为map 的结构如下 : </br>
                    { name: '常用文件夹' </br>
                    ,id: 1 </br>
                    ,alias: 'changyong' </br>
                    ,children: [  </br>
                    {
                    name: '所有未读'  </br>
                    ,id: 11  </br>
                    ,href: 'http://www.layui.com/'  </br>
                    ,alias: 'weidu'  </br>
                    }, {  </br>
                    name: '置顶邮件'  </br>
                    ,id: 12  </br>
                    }, {  </br>
                    name: '标签邮件'  </br>
                    ,id: 13  </br>
                    }  </br>
                    ]  </br>
                    } </br>
                    数组元素的属性 children 为数组类型 </br>
                </div>
            </div>
        </div>
    </div>
</div>

<script>

    layui.use(['tree','layer','code'], function(){
        var layer=layui.layer;
        var tree=layui.tree;
        layui.code();


        var treeNode=[ //节点
            {
                name: '常用文件夹'
                ,id: 1
                ,alias: 'changyong'
                ,children: [
                    {
                        name: '所有未读'
                        ,id: 11
                        ,href: 'http://www.layui.com/'
                        ,alias: 'weidu'
                    }, {
                        name: '置顶邮件'
                        ,id: 12
                    }, {
                        name: '标签邮件'
                        ,id: 13
                    }
                ]
            }, {
                name: '我的邮箱'
                ,id: 2
                ,spread: true
                ,children: [
                    {
                        name: 'QQ邮箱'
                        ,id: 21
                        ,spread: true
                        ,children: [
                            {
                                name: '收件箱'
                                ,id: 211
                                ,children: [
                                    {
                                        name: '所有未读'
                                        ,id: 2111
                                    }, {
                                        name: '置顶邮件'
                                        ,id: 2112
                                    }, {
                                        name: '标签邮件'
                                        ,id: 2113
                                    }
                                ]
                            }, {
                                name: '已发出的邮件'
                                ,id: 212
                            }, {
                                name: '垃圾邮件'
                                ,id: 213
                            }
                        ]
                    }, {
                        name: '阿里云邮'
                        ,id: 22
                        ,children: [
                            {
                                name: '收件箱'
                                ,id: 221
                            }, {
                                name: '已发出的邮件'
                                ,id: 222
                            }, {
                                name: '垃圾邮件'
                                ,id: 223
                            }
                        ]
                    }
                ]
            }
        ]

        tree({
            elem:'#tree',
            nodes:treeNode,
            click:function (node) {
                layer.msg('选择的节点  : '+JSON.stringify(node),{
                    time:10000,
                    btn:['知道了']
                })
            }
        });

    });
</script>