{{#if success}}
    <div class="layui-card" style="padding: 15px; line-height: 5px;width: 700px;margin: 0 auto;">
        <div class="layui-card-header">{{../param_catalog.catalog_name}}</div>
        <div class="layui-card-body">
            <div class="layui-form layui-form-pane">
                <form method="post" id="paramForm" action="#" >
                    <div class="layui-form-item layui-form-text" align="center">
                        <div class="layui-form-mid layui-word-aux">&nbsp;&nbsp;&nbsp;&nbsp;{{../param_catalog.catalog_remark}}</div>
                    </div>
                    {{#each ../param_list}}
                    <div class="layui-form-item layui-form-text" align="center">
                        <label class="layui-form-label">{{param_name}}({{param_desc}})</label>
                        <div class="layui-input-block" >
                            <input type="hidden" name="param_ids" value="{{param_id}}"/>
                            <input type="hidden" name="param_names" value="{{param_name}}"/>
                            <textarea name="param_values" lay-verify="required" class="layui-textarea" rows="2">{{param_val}}</textarea>
                        </div>
                    </div>
                    {{/each}}
                    <div class="layui-form-item" align="center">
                        <button class="layui-btn" id="change_pwd_btn" lay-filter="save_params" lay-submit>保存</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <style>
        .layui-card-body {
            padding-top:1px;
        }
    </style>
    <script>
        layui.use(['form','jquery'], function() {
            var form = layui.form;
            var $ = layui.$;

            //监听提交
            form.on('submit(save_params)', function(data){

                var json = data.field;
                //alert($('#paramForm').serialize());return false;
                $.ajax({
                    url: "{{projcfg.base}}/common/saveSysParams.do",
                    data: $('#paramForm').serialize(), //请求的附加参数，用json对象
                    method: 'POST',
                    success: function (res) {
                        if(res.success) {
                            layer.msg(res.msg+'['+res.code+']', { icon: 6 });
                        }
                        else {
                            layer.msg(res.msg+'['+res.code+']', { icon: 5 });
                        }
                    },
                    error: function () {
                        layer.msg('网络出现问题', { icon: 5 });
                    }
                });
                return false;
            });
        });
    </script>
{{else}}
    {{../msg}}
{{/if}}

